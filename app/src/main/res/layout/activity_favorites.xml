<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ifoodie_cag.activities.FavoritesActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:adjustViewBounds="true"
                app:srcCompat="@drawable/backbtn" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Favorites"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/avatarpic" />

        </LinearLayout>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:checkedButton="@id/rbUpcoming"
            android:background="@drawable/rounded_border"
            android:elevation="10dp"
            >


            <RadioButton
                android:id="@+id/rbUpcoming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_button_orange"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/white"

                android:text="Food Items" />

            <RadioButton
                android:id="@+id/rbHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:background="@drawable/rounded_button_white"
                android:button="@null"
                android:textColor="@color/orange"
                android:text="Restaurants" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/llChickenPizza"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/chickenpizza"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgviewprz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/chickenprize" />


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="160dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/heart" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgviewstars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="@id/llChickenPizza"
                app:layout_constraintStart_toStartOf="@id/llChickenPizza"
                app:srcCompat="@drawable/pizza_stars" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="Chicken Hawaiian" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/light_gray"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:text="Chicken, Cheese and Pineapple" />

        <LinearLayout
            android:id="@+id/llRedPizza"
            android:layout_width="350dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/redpizza"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/PIZZAPRZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/redprize" />


                <ImageView
                    android:id="@+id/PZZAHEART"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="160dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/heart" />
            </LinearLayout>

            <ImageView
                android:id="@+id/pizzsTARS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="@id/llRedPizza"
                app:layout_constraintStart_toStartOf="@id/llRedPizza"
                app:srcCompat="@drawable/pizza_stars" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView122"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="Red N Hot Pizza" />

        <TextView
            android:id="@+id/textView2650"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/light_gray"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:text="Chicken, Chili" />

        <LinearLayout
            android:id="@+id/llFood"
            android:layout_width="350dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/food_photo"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/food_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/food_prize" />


                <ImageView
                    android:id="@+id/foodHEART"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="160dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/heart" />
            </LinearLayout>

            <ImageView
                android:id="@+id/foodstars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="@id/llRedPizza"
                app:layout_constraintStart_toStartOf="@id/llRedPizza"
                app:srcCompat="@drawable/pizza_stars" />


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>