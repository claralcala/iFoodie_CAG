<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ifoodie_cag.activities.VerificationCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/backbtn" />

            <ImageView
                android:id="@+id/imageView467567"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="270dp"
                android:layout_toRightOf="@id/imageView4"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/orangecircle" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="45sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="25dp"

            android:text="Verification Code" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Please type the verification code sent to calcgar312@iescarrillo.es"/>





        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:ems="10"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:inputType="text"
                android:background="@drawable/round_button"
                android:text="" />


            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:ems="10"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="25dp"
                android:inputType="textPassword"
                android:background="@drawable/round_button"

                android:text="" />


            <EditText
                android:id="@+id/editPass3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:ems="10"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="210dp"
                android:layout_marginRight="25dp"
                android:inputType="textPassword"
                android:background="@drawable/round_button"
                android:text="" />

            <EditText
                android:id="@+id/editPass4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:ems="10"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="300dp"
                android:layout_marginRight="25dp"
                android:inputType="textPassword"
                android:background="@drawable/round_button"
                android:text="" />



        </RelativeLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginLeft="80dp"
                android:text="I didn't receive a code!" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/orange"
                android:gravity="center"
                android:text="Please resend" />

        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:padding="16dp"
            android:rowCount="4">


            <Button


                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1" />

            <Button

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2" />

            <Button

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:layout_width=""
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:layout_width=""
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:layout_width=""
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6" />

            <Button

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7" />

            <Button

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8" />

            <Button

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9" />



            <Space

                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />



            <ImageView
                android:id="@+id/imageViewDelete"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:src="@drawable/ic_delete" />

        </GridLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>