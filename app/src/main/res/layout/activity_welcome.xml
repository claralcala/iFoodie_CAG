<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ifoodie_cag.activities.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fooddef"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="300dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/skip" />



        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="25dp"

            android:text="Welcome to" />

        <TextView
            android:id="@+id/tvfoody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="45sp"
            android:textColor="@color/orange"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"

            android:text="iFoody" />



        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#151517"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:text="Your favorite foods delivered fast at your door" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Sign in with"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FACEBOOK"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/black"
                android:drawableLeft="@drawable/fblogodef"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GOOGLE"
                android:backgroundTint="@color/black"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/googlelogo"
                android:layout_marginRight="20dp"/>

        </LinearLayout>



        <Button
            android:id="@+id/button2"

            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:backgroundTint="@color/light_gray"
            android:text="Start with email or phone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="105dp"
                android:text="Already have an account?" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/orange"
                android:gravity="center"
                android:text="Sign In" />

        </LinearLayout>






    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>