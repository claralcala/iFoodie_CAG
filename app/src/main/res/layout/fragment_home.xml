<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ifoodie_cag.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="What would you like to order" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/mag_glass"
            android:drawableEnd="@drawable/filter"
            android:ems="10"
            android:hint="Find food or restaurant"
            android:inputType="text"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:clickable="true"
            android:scrollbars="horizontal"
            android:scrollbarSize="5dp"
            android:elevation="10dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Featured Restaurants"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="View All >"
                android:textColor="@color/orange"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">


                    <LinearLayout
                        android:id="@+id/llChickenPizza"
                        android:layout_width="205dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/tacos"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgviewprz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/pizza_stars" />


                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="81dp"
                                android:layout_height="81dp"
                                android:layout_gravity="right"
                                android:layout_marginLeft="40dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/heart" />
                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/vfd"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="McDonald's"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free delivery"
                        android:layout_marginLeft="20dp"
                        android:textSize="13sp"
                        android:textColor="@color/light_gray"
                        android:drawableLeft="@drawable/moto"
                        android:drawablePadding="3dp"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10-15 mins"
                        android:layout_marginLeft="20dp"
                        android:textSize="13sp"
                        android:textColor="@color/light_gray"
                        android:drawableLeft="@drawable/clock"
                        android:drawablePadding="3dp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BURGER"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/light_gray"

                        android:drawablePadding="3dp"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHICKEN"
                        android:layout_marginLeft="20dp"
                        android:textSize="13sp"
                        android:textColor="@color/light_gray"
                        android:drawablePadding="3dp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAST FOOD"
                        android:layout_marginLeft="20dp"
                        android:textSize="13sp"
                        android:textColor="@color/light_gray"
                        android:drawablePadding="3dp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">


                    <LinearLayout
                        android:id="@+id/llChickenPizzadef"
                        android:layout_width="205dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/chickenpizza"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgviewcx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/pizza_stars" />


                            <ImageView
                                android:id="@+id/imageView88"
                                android:layout_width="81dp"
                                android:layout_height="81dp"
                                android:layout_gravity="right"
                                android:layout_marginLeft="40dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/heart" />
                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/vfd"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="Starbucks"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free delivery"
                        android:layout_marginLeft="20dp"
                        android:textSize="13sp"
                        android:textColor="@color/light_gray"
                        android:drawableLeft="@drawable/moto"
                        android:drawablePadding="3dp"

                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">







                </LinearLayout>

            </LinearLayout>






        </LinearLayout>






        </LinearLayout>




</FrameLayout>