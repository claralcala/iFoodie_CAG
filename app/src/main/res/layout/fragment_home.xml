<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ifoodie_cag.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="What would you like to order" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/mag_glass"
            android:drawableEnd="@drawable/filter"
            android:ems="10"
            android:hint="Find food or restaurant"
            android:inputType="text"
            android:textSize="18sp" />


    </LinearLayout>

</FrameLayout>