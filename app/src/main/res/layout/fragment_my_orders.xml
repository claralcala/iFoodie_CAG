<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ifoodie_cag.fragments.MyOrdersFragment">

    <!-- TODO: Update blank fragment layout -->




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:adjustViewBounds="true"
                app:srcCompat="@drawable/backbtn" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="My Orders"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/avatarpic" />

        </LinearLayout>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:checkedButton="@id/rbUpcoming"
            android:background="@drawable/rounded_border"
            android:elevation="10dp"
            >


            <RadioButton
                android:id="@+id/rbUpcoming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_button_orange"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/white"

                android:text="Upcoming" />

            <RadioButton
                android:id="@+id/rbHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:background="@drawable/rounded_button_white"
                android:button="@null"
                android:textColor="@color/orange"
                android:text="History" />

        </RadioGroup>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="20dp"
            android:elevation="10dp">


            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rowCount="3"
                app:columnCount="4">


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/starbucks"
                    android:layout_margin="10dp"
                    app:layout_columnWeight="1"
                    app:layout_column="0"
                    app:layout_row="0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="1"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0"
                    app:layout_columnSpan="2">





                </LinearLayout>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="#264100"
                    app:layout_columnWeight="1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/orange"
                    app:layout_column="3"
                    app:layout_row="0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="1"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    app:layout_row="0"
                    app:layout_columnSpan="2">



                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="3 Items"

                        android:textColor="@color/light_gray"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="Starbucks"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        app:layout_column="2"
                        android:drawableRight="@drawable/vfd"
                        android:drawablePadding="5dp"
                        app:layout_row="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="0"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1"
                    app:layout_columnSpan="2">



                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="Estimated Arrival"

                        android:textColor="@color/light_gray"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="25 min"
                        android:textColor="@color/black"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        app:layout_column="2"
                        android:drawablePadding="5dp"
                        app:layout_row="0" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1"
                    app:layout_columnSpan="2">



                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="Now"
                        android:textAlignment="viewEnd"
                        android:layout_marginLeft="90dp"
                        android:textColor="@color/light_gray"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="Food on the way"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="90dp"
                        app:layout_column="2"
                        android:drawablePadding="5dp"
                        app:layout_row="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="0"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="2"
                    app:layout_columnSpan="2">




                    <Button
                        android:id="@+id/btnCancelOrder"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/white"
                        android:elevation="20dp"
                        android:text="Cancel" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="2"
                    app:layout_columnSpan="2">


                    <Button
                        android:id="@+id/btntrackorder"
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:elevation="30dp"
                        android:text="Track Order" />

                </LinearLayout>



            </androidx.gridlayout.widget.GridLayout>



        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Lasted Orders" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="20dp"
            android:elevation="10dp">


            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rowCount="3"
                app:columnCount="4">


                <ImageView
                    android:id="@+id/imageView75675"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jimmy"
                    android:layout_margin="10dp"
                    app:layout_columnWeight="1"
                    app:layout_column="0"
                    app:layout_row="0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="1"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0"
                    app:layout_columnSpan="2">





                </LinearLayout>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="$17.10"
                    android:layout_marginLeft="50dp"
                    app:layout_columnWeight="1"
                    android:textColor="@color/orange"
                    app:layout_column="3"
                    app:layout_row="0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="1"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    app:layout_row="0"
                    app:layout_columnSpan="2">



                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="20 Jun, 10:30 - 3 items"

                        android:textColor="@color/light_gray"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="Jimmy John's"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        app:layout_column="2"
                        android:drawableRight="@drawable/vfd"
                        android:drawablePadding="5dp"
                        app:layout_row="0" />

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="Order Delivered"
                        android:textStyle="bold"
                        android:textColor="#4CEA29"
                        app:layout_column="1"
                        android:drawableLeft="@drawable/greencircle"
                        android:paddingLeft="5dp"
                        app:layout_row="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="0"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1"
                    app:layout_columnSpan="2">




                    <Button
                        android:id="@+id/btnRate"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/white"
                        android:elevation="20dp"
                        android:text="Rate" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1"
                    app:layout_columnSpan="2">






                    <Button
                        android:id="@+id/reorder"
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:elevation="30dp"
                        android:text="Re-Order" />

                </LinearLayout>




            </androidx.gridlayout.widget.GridLayout>



        </androidx.cardview.widget.CardView>




    </LinearLayout>



</FrameLayout>